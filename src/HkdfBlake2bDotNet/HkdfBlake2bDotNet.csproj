<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.0</Version>
        <Authors>Samuel Lucas</Authors>
        <Description>HKDF with keyed BLAKE2b-512 instead of HMAC.</Description>
        <Copyright>Copyright (c) 2023 Samuel Lucas</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/samuel-lucas6/HKDF-BLAKE2b</PackageProjectUrl>
        <RepositoryUrl>https://github.com/samuel-lucas6/HKDF-BLAKE2b</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>hkdf blake2b kdf</PackageTags>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Geralt" Version="2.0.0" />
    </ItemGroup>

</Project>
